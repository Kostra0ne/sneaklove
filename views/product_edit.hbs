<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/prod-edit/{{sneakers._id}}" class="edit-product-form">
    <h3 class="form-title"> Edit Sneaker</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="name" class="label-name label">Model name</label>
      <input id="name" name="name" type="text" class="input-text input" placeholder="Nike Air Max 90" value="{{sneakers.name}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="ref" class="label-ref label">RÃ©f.</label>
      <input id="ref" name="ref" type="text" class="input-text input" placeholder="ex: NV23498" value="{{sneakers.ref}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="size" class="label-ref label">Size</label>
      <input id="size" name="size" type="number" class="input-text input" placeholder="ex: 37" value="{{sneakers.size}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="description" class="label-descr label">Description</label>
      <input id="description" name="description" type="text" class="input-text input" placeholder="The better sneakers to run" value="{{sneakers.description}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="price" class="label-price label">Price</label>
      <input id="price" name="price" type="number" class="sneaker-price input" min="1" value="{{sneakers.price}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select id="category" name="category" class="select" required>
        <option value="-1" disabled selected>Choose main Category...</option>
        <option value="Men">Men</option>
        <option value="Women">Women</option>
        <option value="Kids">Kids</option>
      </select>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneaker-btn">Edit this sneaker</button>
  </form>
</div>